<script>
document.addEventListener("DOMContentLoaded", function() {
    const folderElements = document.querySelectorAll('.foldername');

    folderElements.forEach(folder => {
        const text = folder.innerText;

        if (text.includes('Financial System')) {
            folder.style.color = '#ff5733'; // Apply Financial System color
        } else if (text.includes('Filming')) {
            folder.style.color = '#33ff57'; // Apply Filming color
        } else if (text.includes('Youtube, SEO')) {
            folder.style.color = '#3357ff'; // Apply Youtube SEO color
        } else if (text.includes('Defcon')) {
            folder.style.color = '#a133ff'; // Apply Defcon color
        } else if (text.includes('Digigarden')) {
            folder.style.color = '#33ff8a'; // Apply Digigarden color
        }
    });
});
</script>
